<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C2E1D4"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_main_c"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="#ECECEC"
        android:text="@string/c_note"
        android:textColor="#000000"
        app:layout_constraintEnd_toStartOf="@+id/button_main_cs"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_main_g"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:backgroundTint="#ECECEC"
        android:text="G"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/button_main_f"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/button_main_f"
        app:layout_constraintTop_toBottomOf="@+id/button_main_f" />

    <Button
        android:id="@+id/button_main_fs"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:backgroundTint="#232323"
        android:text="F♯"
        app:layout_constraintBottom_toTopOf="@+id/button_main_g"
        app:layout_constraintEnd_toEndOf="@+id/button_main_ds"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/button_main_ds"
        app:layout_constraintTop_toBottomOf="@+id/button_main_f" />

    <Button
        android:id="@+id/button_main_f"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:backgroundTint="#ECECEC"
        android:text="F"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/button_main_e"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/button_main_e"
        app:layout_constraintTop_toBottomOf="@+id/button_main_e" />

    <Button
        android:id="@+id/button_main_gs"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#232323"
        android:text="G♯"
        app:layout_constraintBottom_toTopOf="@+id/button_main_a"
        app:layout_constraintEnd_toEndOf="@+id/button_main_fs"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/button_main_fs"
        app:layout_constraintTop_toBottomOf="@+id/button_main_g" />

    <Button
        android:id="@+id/button_main_e"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:backgroundTint="#ECECEC"
        android:text="E"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/button_main_d"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/button_main_d"
        app:layout_constraintTop_toBottomOf="@+id/button_main_d" />

    <Button
        android:id="@+id/button_main_ds"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:backgroundTint="#232323"
        android:text="D♯"
        app:layout_constraintBottom_toTopOf="@+id/button_main_e"
        app:layout_constraintEnd_toEndOf="@+id/button_main_cs"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/button_main_cs"
        app:layout_constraintTop_toBottomOf="@+id/button_main_d" />

    <Button
        android:id="@+id/button_main_d"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:backgroundTint="#ECECEC"
        android:text="D"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/button_main_c"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/button_main_c"
        app:layout_constraintTop_toBottomOf="@+id/button_main_c" />

    <Button
        android:id="@+id/button_main_a"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:backgroundTint="#ECECEC"
        android:text="@string/a_note"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/button_main_g"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/button_main_g"
        app:layout_constraintTop_toBottomOf="@+id/button_main_g" />

    <Button
        android:id="@+id/button_main_b"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:backgroundTint="#ECECEC"
        android:text="@string/b_note"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/button_main_a"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/button_main_a"
        app:layout_constraintTop_toBottomOf="@+id/button_main_a" />

    <Button
        android:id="@+id/button_main_bb"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:backgroundTint="#232323"
        android:text="@string/b_flat_note"
        app:layout_constraintBottom_toTopOf="@+id/button_main_b"
        app:layout_constraintEnd_toEndOf="@+id/button_main_gs"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/button_main_gs"
        app:layout_constraintTop_toBottomOf="@+id/button_main_a" />

    <Button
        android:id="@+id/button_main_cs"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginEnd="15dp"
        android:backgroundTint="#232323"
        android:text="C♯"
        app:layout_constraintBottom_toTopOf="@+id/button_main_d"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_main_c"
        app:layout_constraintTop_toBottomOf="@+id/button_main_c" />

    <Button
        android:id="@+id/button_main_playSong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Play Song"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_main_b" />

</androidx.constraintlayout.widget.ConstraintLayout>